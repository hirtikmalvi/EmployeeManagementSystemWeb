@using EmployeeManagementSystemWeb.DTOs.Employees;

@model CreateEmployeeDTO
@{
    ViewData["Title"] = "Create";
}

<div>
    <h1 class="text-center">Create Employee</h1>
    <div style="max-width:400px" class="container">
        <form method="post" asp-controller="Employee" asp-action="Create" class="border rounded-2 px-3">
            <div class="mt-3">
                <label asp-for="EmpName" class="form-label"></label>
                <input asp-for="EmpName" class="form-control" placeholder="Enter Employee Name"/>
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>
            <div class="mt-1">
                <label asp-for="Department" class="form-label"></label>
                <input asp-for="Department" class="form-control" placeholder="Enter Department"/>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="mt-1">
                <label asp-for="Salary" class="form-label"></label>
                <input asp-for="Salary" class="form-control" type="number" placeholder="Enter Salary"/>
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="mt-1">
                <label asp-for="JoiningDate" class="form-label"></label>
                <input asp-for="JoiningDate" class="form-control" type="date"/>
                <span asp-validation-for="JoiningDate" class="text-danger"></span>
            </div>
            <div class="my-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Create</button>
                <a class="btn btn-secondary" asp-controller="Employee" asp-action="Index">Go to Employee List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{ 
        <partial name="_ValidationScriptsPartial" />
    }
}
